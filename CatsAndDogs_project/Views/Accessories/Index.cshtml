@model IEnumerable<CatsAndDogs_project.Models.Accessories>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/index_forstore.css"  />
</head>

<h1>אקססוריז</h1>

<p>
    <a class="create_btn" asp-action="Create">הוספת אקססוריז חדש</a>
</p>

<p class="choose" asp - action="DorOrCat">

    @*בחר את סוג החיה:*@ <select name = "animal" id = "animalid" >

    <option value = "" selected disabled hidden>בחר</option>
    <option value="" selected="selected">כלב</option>
    <option value="" selected="selected">חתול</option>
    </select>

    @*בחר את הקטגוריה הרצויה:*@ <select name = "cate" id = "animalid" >

    <option value = "" selected disabled hidden> בחר קטגוריה </option>
    @*<option value="" selected disabled hidden>בחר</option>*@
    <option value="" selected="selected">רצועות</option>
    <option value="" selected="selected">צעצועים</option>
    </select>


    @*מחיר:*@ <input name = "num1" placeholder = "מחיר החל מ" autocomplete = "off" />

    <input name = "num2" placeholder = "מחיר עד" autocomplete = "off" />



    <input id = "sub_search" type = "submit" value = "חיפוש" />
    </p >

    <div class="sidenav">
        <h4> קטגוריות לאקססוריז</h4>
        <hr />
        <a href="#">רצועות</a>
        <a href="#services">צעצועים</a>
    </div>

    <div class="container">

        <div class="row">

            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <a class="dropdown-item" href="#">Something else here</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Separated link</a>
            </div>

            @foreach (var item in Model)
            {
                <div class="card col-3" style="width: 18rem; position:inherit">
                    <img src="@item.Image" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title"> @item.Name</h5>
<p class="card-text" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;">@item.Description</p>
                    <p> @Html.DisplayNameFor(model => model.Recommendation) @item.Recommendation </p>
                    <p id="price"> @Html.DisplayNameFor(model => model.Price): @item.Price ₪ </p>

                </div>
                <div class="option">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">לפרטים נוספים</a>
                    <a class="editOption" asp-action="Edit" asp-route-id="@item.Id">עריכה</a>
                    <a class="removeOption" asp-action="Delete" asp-route-id="@item.Id">מחיקה</a>
                </div>
            </div>

        }



    </div>
</div>



