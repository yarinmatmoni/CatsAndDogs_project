@model CatsAndDogs_project.Models.AdoptionDays

@{
    ViewData["Title"] = "Edit";
}

<h1>עריכת יום אימוץ</h1>

<div class="row">
    <div class="card col-3" style="width: 18rem; position:inherit">
        <div class="card-body">
            <form asp-action="Edit">
                <div class="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="feture">
                        <h5 class="card-title">זמן :</h5><span><input asp-for="DateandTime" class="form-control" /></span>
                        <span asp-validation-for="DateandTime" class="text-danger"></span>
                    </div>
                    <div class="feture">
                        <h5 class="card-title"><label asp-for="Location" class="control-label"></label> :</h5><span><input asp-for="Location" class="form-control" /></span>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="feture">
                        <h5 class="card-title"><label asp-for="Discription" class="control-label"></label> :</h5><span><input asp-for="Discription" class="form-control" /></span>
                        <span asp-validation-for="Discription" class="text-danger"></span>
                    </div>
                </div>
                <div class="img">
                    <div class="options">
                        <a asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
                        <input type="submit" value="שמור" class="btn btn-primary" />
                    </div>
                </div>
               </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/css/edit2.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
}

