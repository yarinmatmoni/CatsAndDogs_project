        <input name="queryDate" placeholder="הקלד תאריך לחיפוש..." autocomplete="off" />
        <input name="queryLocation" placeholder="הקלד מיקום לחיפוש..." autocomplete="off" />
        <input id="sub_search" type="submit" value="חיפוש" />
