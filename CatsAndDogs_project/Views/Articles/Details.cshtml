@model CatsAndDogs_project.Models.Articles

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="~/css/articals_details_2.css" rel="stylesheet" />
</head>

<h1> @Html.DisplayFor(model => model.Titel)</h1>
<div class="card col-3" style="width: 18rem; position:inherit">
    <div class="card-body">
        <div class="details">
            <div class="body-up">
                <div class="feture">
                    <h5 class="card-title">מאת :</h5>
                    <span>  @Html.DisplayFor(model => model.Author)</span>
                </div>
                <div class="feture">
                    <h5 class="card-title">נוצרה בתאריך </h5> <span>@Html.DisplayFor(model => model.CreationDate)</span>
                </div>
                <div class="feture">
                    <h5 class="card-title">עודכן בתאריך :</h5><span>@Html.DisplayFor(model => model.LastUpDate)</span>
                </div>
                <div class="feture">
                    <h5 class="card-title">קטגוריה :</h5><span> @Html.DisplayFor(model => model.Category.Name)</span>
                </div>
            </div>
            <div class="body-down">
                <div class="feture">
                    <h5 class="card-title">תקציר:</h5><span> @Html.DisplayFor(model => model.Summary)</span>
                </div>
                <div class="feture">
                    <h5 class="card-title">גוף הכתבה  :</h5><span> @Html.DisplayFor(model => model.Body)</span>
                </div>
            </div>

        </div>
        <div class="img">
            <img src=@Html.DisplayFor(model => model.Img) class="card-img">
            <div class="options">
                <a asp-action="Edit" asp-route-id="@Model.Id"><i class='far fa-edit'></i></a>
                <a asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
            </div>
        </div>
    </div>
</div>

