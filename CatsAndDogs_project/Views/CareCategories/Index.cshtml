@model IEnumerable<CatsAndDogs_project.Models.CareCategory>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/css/category_index.css" rel="stylesheet" />
</head>

<h1>קטגוריות טיפוח</h1>

<form asp-action="Search" class="search">
    <input name="query" placeholder="הקלד שם לחיפוש..." autocomplete="off" />
    <input id="sub_search" type="submit" value="חיפוש" />
</form>

<p class="top">
    <a class="create_btn" asp-action="Create">צור קטגוריה חדשה</a>
    <a class="create_btn" asp-action="Index" asp-controller="Cares"><i class="material-icons">keyboard_backspace</i></a>
</p>


<table class="table">
    <thead>
        <tr>
            <th style=" text-align: center">
                שם הקטגוריה
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="options">
                        <a id="edit_btn" asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i></a>
                        <a id="delete_btn" asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons">close</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
