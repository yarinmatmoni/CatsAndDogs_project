@model CatsAndDogs_project.Models.Dog_2

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="~/css/delete_2.css" rel="stylesheet" />
</head>

<h1>מחיקת כלב מרשימת האימוץ</h1>
<h3>האם אתה בטוח שתרצה למחוק את <span>@Html.DisplayFor(model => model.Name)</span> מרשימת האימוץ ?</h3>

<div class="card col-3" style="width: 18rem; position:inherit">
    <div class="card-body">
        <div class="details">
            <h5 class="card-title-name">שם הכלב :  @Html.DisplayFor(model => model.Name)</h5>
            <div class="feture">
                <h5 class="card-title">סוג :</h5>
                <span class="span-title">
                    @foreach (var modle in Model.ListBreed)
                    {
                        @Html.DisplayFor(modelItem => modle.Name) <label> ,</label>
                    }
                </span>
            </div>
            <div class="feture">
                <h5 class="card-title">גיל :</h5><span class="span-title">@Html.DisplayFor(modle => modle.Age)</span>
            </div>
            <div class="feture">
                <h5 class="card-title">גודל :</h5><span class="span-title">@Html.DisplayFor(modle => modle.Size)</span>
            </div>
            <div class="feture">
                <h5 class="card-title">מין :</h5><span class="span-title">@Html.DisplayFor(modle => modle.Gender)</span>
            </div>
            <div class="feture">
                <h5 class="card-title">צבע :</h5><span class="span-title">@Html.DisplayFor(modle => modle.Color)</span>
            </div>
            <div class="feture">
                <h5 class="card-title">תוחלת חיים :</h5><span class="span-title">@Html.DisplayFor(modle => modle.LifeExpectancy)</span>
            </div>
            <div class="feture-description">
                <h5 class="card-title">תיאור:</h5><span class="span-title">@Html.DisplayFor(modle => modle.Description)</span>
            </div>
        </div>
        <div class="img">
            <img src=@Html.DisplayFor(model => model.Image) class="card-img">
            <div class="options">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="מחיקה" class="btn btn-danger" />
                    <a asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
                </form>
            </div>
        </div>
    </div>
</div>

