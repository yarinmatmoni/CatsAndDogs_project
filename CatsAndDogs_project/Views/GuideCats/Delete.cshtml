@model CatsAndDogs_project.Models.GuideCat

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link href="~/css/guide_cat_delete.css" rel="stylesheet" />
</head>

<img src=@Html.DisplayFor(model => model.Image) class="card-img">
<div class="titel">
    <h1>@Html.DisplayFor(model => model.BreedCat.Name)</h1>
</div>
<p class="sure">אתה בטוח שאתה רוצה למחוק מדריך של גזע  <span>@Html.DisplayFor(model => model.BreedCat.Name)</span>מרשימת המדריכים?</p>

<form class="option" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input id="delete_btn" type="submit" value="מחיקה" class="btn btn-danger" />
    <a id="back-btn" asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
</form>

<div class="body-guide">
    <div class="description">
        <h3 class="description-title">תיאור כללי</h3>
        <p class="description-guide" style="white-space:pre-line">@Html.DisplayFor(model => model.Description)</p>
    </div>
    <div class="description">
        <h3 class="description-title">תוכנות אופי</h3>
        <p class="description-guide" style="white-space:pre-line">@Html.DisplayFor(model => model.Characteristics)</p>
    </div>
    <div class="description">
        <h3 class="description-title">בריאות</h3>
        <p class="description-guide" style="white-space:pre-line"> @Html.DisplayFor(model => model.Health)</p>
    </div>
</div>
