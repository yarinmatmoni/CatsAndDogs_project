@model CatsAndDogs_project.Models.GuideDog

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="~/css/guide_details.css" rel="stylesheet" />
</head>

<img src=@Html.DisplayFor(model => model.Image) class="card-img">
<div class="titel">
    <h1>@Html.DisplayFor(model => model.BreedDog.Name)</h1>
</div>
<div class="dog-info">
    <div>
        <h3 class="info"> @Html.DisplayFor(model => model.AvgLife)</h3>
        <span class="info-titel">
            תוחלת חיים ממוצעת
        </span>
    </div>
    <div>
        <h3 class="info">@Html.DisplayFor(model => model.AvgWeight)</h3>
        <span class="info-titel">
            משקל ממוצע של כלב בוגר
        </span>
    </div>
    <div>
        <h3 class="info">@Html.DisplayFor(model => model.AvgHeight)</h3>
        <span class="info-titel">
            גובה ממוצע של כלב בוגר
        </span>
    </div>
</div>
<div class="body-guide">
    <div class="description">
        <h3 class="description-title">תיאור כללי</h3>
        <p class="description-guide" style="white-space:pre-line">@Html.DisplayFor(model => model.Description)</p>
    </div>
    <div class="description">
        <h3 class="description-title">תוכנות אופי</h3>
        <p class="description-guide" style="white-space:pre-line">@Html.DisplayFor(model => model.Characteristics)</p>
    </div>
    <div class="description">
        <h3 class="description-title">בריאות</h3>
        <p class="description-guide" style="white-space:pre-line"> @Html.DisplayFor(model => model.Health)</p>
    </div>
    <div class="description">
        <h3 class="description-title">אילוף</h3>
        <p class="description-guide" style="white-space:pre-line">@Html.DisplayFor(model => model.Training)</p>
    </div>
</div>
<div class="option">
    @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Editor"))
    {
        <a id="edit_btn" asp-action="Edit" asp-route-id="@Model.Id"><i class='far fa-edit'></i></a>
    }
        <a id="back-btn" asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
}
