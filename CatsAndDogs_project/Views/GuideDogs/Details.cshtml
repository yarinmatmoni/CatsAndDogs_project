@model CatsAndDogs_project.Models.GuideDog

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="~/css/guide_details1.css" rel="stylesheet" />
</head>
<img src=@Html.DisplayFor(model => model.Image) class="card-img">
<div class="titel">
    <h1>@Html.DisplayFor(model => model.BreedDog.Name)</h1>
</div>
<div class="dog-info">
    <div>
        <h3> @Html.DisplayFor(model => model.AvgLife)</h3>
