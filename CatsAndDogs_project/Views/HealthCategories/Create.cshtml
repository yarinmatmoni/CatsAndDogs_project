@model CatsAndDogs_project.Models.HealthCategory

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/create_2.css" />
</head>

<h1>הוספת קטגוריה לבריאות</h1>

<div class="row">
    <div class="card col-3" style="width: 18rem; position:inherit">
        <div class="card-body">
            <form asp-action="Create">
                <div class="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="feture">
                        <h5 class="card-title"><label asp-for="Name" class="control-label"></label> :</h5>
                        <span> <input asp-for="Name" class="form-control" autocomplete="off" /></span>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="img">
                        <div class="options">
                            <a asp-action="Index"><i class="material-icons">keyboard_backspace</i></a>
                            <input type="submit" value="שמור" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

