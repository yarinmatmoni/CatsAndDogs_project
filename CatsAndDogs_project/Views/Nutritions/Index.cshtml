@model IEnumerable<CatsAndDogs_project.Models.Nutrition>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/css/index_forstore.css" rel="stylesheet" />
</head>

<div class="toppageNutrition">
    <img class="card-img" src="https://images1.ynet.co.il/PicServer5/2018/09/07/8761568/876156001000100980653no.jpg" />
    <div class="titel">
        <h1>תזונה</h1>
        <p class="sub-title">מגוון מזונות ומאכלים שיתאימו לבעל החיים באופן הטוב ביותר ומחירים הטובים ביותר הקיימים בשוק! </p>
    </div>
    @*<h1 class="title1">תזונה</h1>
        <br />
        <br />
        <h2 class="title2"> מגוון מזונות ומאכלים שיתאימו לבעל החיים באופן הטוב ביותר ומחירים הטובים ביותר הקיימים בשוק! </h2>*@
</div>


@*<h1>תזונה</h1>*@
@if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Editor"))
{
    <div class="crt-btns">

        <p class="topButtons">
            <a class="topB" asp-action="Create">הוספת מוצר תזונה חדש</a>
        </p>
        <p class="topButtons">
            <a class="topB" asp-action="Index" asp-controller="NutritionCategories"> קטגוריות לתזונה </a>
        </p>
        <p class="topButtons">
            <a class="topB" asp-action="Statistics">הצגת סטטיסטיקה</a>
        </p>

    </div>

}

<form asp-action="Search" class="search">

    <div class="search1">

        <input name="query" placeholder="הקלד מילת חיפוש" autocomplete="off" />
        <input id="sub_search" type="submit" value="חיפוש" />

    </div>

</form>

<div class="container">
    <div class="row">

        @foreach (var group in Model.GroupBy(a => a.Type))
        {
            <h3> סוג החיה: @group.Key</h3>
            @foreach (var category in group.GroupBy(x => x.Category))
            {
                <h4> @category.Key.Name </h4>
                foreach (var item in category)
                {
                    <div class="card col-3" style="width: 18rem; position:inherit">
                        <img src="@item.Image" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title"> @item.Name</h5>
                            <p class="card-text" style="overflow: hidden; margin-bottom: -19px; text-overflow: ellipsis;white-space: nowrap;">@item.Description</p>
                            <p> <h5> @Html.DisplayNameFor(model => model.Advantages) </h5> @item.Advantages </p>
                            <p> <h5> @Html.DisplayNameFor(model => model.matching) </h5> @item.matching </p>
                            <p id="price"> @Html.DisplayNameFor(model => model.Price): @item.Price ₪ </p>

                        </div>
                        <div class="option">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">לפרטים נוספים</a>
                            
                            @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Editor"))
                            {
                                <a class="editOption" asp-action="Edit" asp-route-id="@item.Id">עריכה</a>
                                <a class="removeOption" asp-action="Delete" asp-route-id="@item.Id">מחיקה</a>
                            }
                        </div>
                    </div>

                }
 
            }

        }

    </div>
</div>
