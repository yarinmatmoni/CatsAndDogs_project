<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cats&Dogs</title>

    <link  href="~/css/menus_3.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body dir="rtl">
    <nav class="nav_top">
        <ul class="dropdown_ul">

            <li> <a asp-action="index" asp-controller="Home"> <img id=logo src="~/images/logo.jpg" alt="logo"></a></li>
            @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
            {
                <li class="log_li"><a class="log_in_out" asp-action="Logout" asp-controller="Users">התנתקות</a></li>
            }
            else
            {
                <li class="log_li"><a class="log_in_out" asp-action="Login" asp-controller="Users">התחברות</a></li>
            }
            <li id="menu_respon">
                <div class="dropdown">
                    <a class="btn"><i class="fa fa-bars"></i></a>
                    <div class="dropdown-content">
                        <a asp-action="Location" asp-controller="Home"><i id=icon class="bi bi-geo"> </i>איפה אנחנו</a>
                        <a asp-action="ContactUs" asp-controller="Home"><i id=icon class="bi bi-chat"></i> צור קשר </a>
                    </div>
                </div>
            </li>

            <li id="home_respon">
                <a class="btn" asp-action="index" asp-controller="Home"><i class="fa fa-home"></i></a>
            </li>

            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-heart"></i><span>אימוץ</span></button>
                    <div class="dropdown-content">
                        <a asp-action="index" asp-controller="AdoptionDays">ימי אימוץ קרובים</a>
                        <a asp-action="index" asp-controller="Dog_2">אימוץ כלבים</a>
                        <a asp-action="index" asp-controller="Cat_2">אימוץ חתולים</a>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-info-circle"></i><span>מידע</span></button>
                    <div class="dropdown-content">
                        <a href="#">מדריך כלבים</a>
                        <a href="#">מדריך חתולים</a>
                        <a asp-action="index" asp-controller="Articles">כתבות</a>
                        <a asp-action="NewPuppy" asp-controller="Articles">גור חדש במשפחה</a>
                        <a href="#">בחר שם לכלב</a>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-shop"></i><span>חנות</span></button>
                    <div class="dropdown-content">
                        <a asp-action="index" asp-controller="Nutritions">תזונה</a>
                        <a asp-action="index" asp-controller="SleepAndEnvironments">שינה וסביבה</a>
                        <a asp-action="index" asp-controller="Accessories">אקססוריז</a>
                        <a asp-action="index" asp-controller="Cares">טיפוח </a>
                        <a asp-action="index" asp-controller="Healths">בריאות</a>
                    </div>
                </div>
            </li>
            <li id="location">
                <div class="dropdown">
                    <a class="dropbtn" asp-action="Location" asp-controller="Home"><i id=icon class="bi bi-geo"> </i>איפה אנחנו</a>
                </div>
            </li>
            <li id="contect">
                <div class="dropdown">
                    <a class="dropbtn" asp-action="ContactUs" asp-controller="Home"><i id=icon class="bi bi-chat"></i>צור קשר</a>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bottommenu">
        <!-- <nav > -->
        <div class="dogfood">
            <ul>
                <li>
                    <h6> מוצרים לכלבים </h6>
                </li>
                <li><a href="#">תזונה</a></li>
                <li><a href="#">בריאות</a></li>
                <li><a href="#">טיפוח</a></li>
                <li><a href="#">שינה וסביבה</a></li>
            </ul>
        </div>

        <div class="catfood">
            <ul>
                <li>
                    <h6> מוצרים לחתולים </h6>
                </li>
                <li><a href="#">תזונה</a></li>
                <li><a href="#">בריאות</a></li>
                <li><a href="#">טיפוח</a></li>
                <li><a href="#">שינה וסביבה</a></li>
            </ul>
        </div>

        <div class="guides">
            <ul>
                <li>
                    <h6> מדריכים </h6>
                </li>
                <li><a href="#">מדריך כלבים</a></li>
                <li><a href="#">מדריך חתולים</a></li>
                <li><a href="#">בחר שם לכלב</a></li>
                <li><a href="#">גור חדש במשפחה</a></li>
            </ul>
        </div>

        <div class="professionals">
            <ul>
                <li>
                    <h6> אנשי מקצוע </h6>
                </li>
                <li><a href="#">מספרות</a></li>
                <li><a href="#">מאלפים</a></li>
                <li><a href="#">וטרינרים</a></li>
                <li><a href="#">פנסיונים</a></li>
                <li><a href="#">חניות מחמד</a></li>
            </ul>
        </div>

        <div class="information">
            <ul>
                <li>
                    <h6> מידע </h6>
                </li>
                <li><a href="#">אודות</a></li>
                <li><a href="#">צור קשר</a></li>
                <li><a href="#">מדריכים</a></li>
                <li><a href="#">שאלות ותשובות</a></li>
            </ul>
        </div>
        <!-- </nav> -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>