<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cats&Dogs</title>

    <link href="~/css/Style2 - Copy.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body dir="rtl">
    <nav class="nav_top">
        <ul class="dropdown_ul">
            
            <li> <a class="logo" href="#"> <img id=logo src="~/images/logo.jpg" alt="logo"></a></li>

            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-heart"></i>אימוץ</button>
                    <div class="dropdown-content">
                        <a href="#">ימי אימוץ קרובים</a>
                        <a asp-action="index" asp-controller="Dogs">אימוץ כלבים</a>
                        <a asp-action="index" asp-controller="Cats">אימוץ חתולים</a>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-info-circle"></i>מידע</button>
                    <div class="dropdown-content">
                        <a href="#">מדריך כלבים</a>
                        <a href="#">מדריך חתולים</a>
                        <a href="#">כתובת</a>
                        <a href="#">גור חדש במשפחה</a>
                        <a href="#">בחר שם לכלב</a>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-shop"></i>חנות</button>
                    <div class="dropdown-content">
                        <a href="#">מזון</a>
                        <a href="#">שינה וסביבה</a>
                        <a href="#">אקססוריז</a>
                        <a href="#">טיפוח </a>
                        <a href="#">בריאות</a>
                    </div>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-geo"> </i>איפה אנחנו</button>
                </div>
            </li>
            <li>
                <div class="dropdown">
                    <button class="dropbtn"><i id=icon class="bi bi-chat"></i>צור קשר</button>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="bottommenu">
        <!-- <nav > -->
        <div class="dogfood">
            <ul>
                <li>
                    <h6> מוצרים לכלבים </h6>
                </li>
                <li><a href="#">תזונה</a></li>
                <li><a href="#">בריאות</a></li>
                <li><a href="#">טיפוח</a></li>
                <li><a href="#">שינה וסביבה</a></li>
            </ul>
        </div>

        <div class="catfood">
            <ul>
                <li>
                    <h6> מוצרים לחתולים </h6>
                </li>
                <li><a href="#">תזונה</a></li>
                <li><a href="#">בריאות</a></li>
                <li><a href="#">טיפוח</a></li>
                <li><a href="#">שינה וסביבה</a></li>
            </ul>
        </div>

        <div class="guides">
            <ul>
                <li>
                    <h6> מדריכים </h6>
                </li>
                <li><a href="#">מדריך כלבים</a></li>
                <li><a href="#">מדריך חתולים</a></li>
                <li><a href="#">בחר שם לכלב</a></li>
                <li><a href="#">גור חדש במשפחה</a></li>
            </ul>
        </div>

        <div class="professionals">
            <ul>
                <li>
                    <h6> אנשי מקצוע </h6>
                </li>
                <li><a href="#">מספרות</a></li>
                <li><a href="#">מאלפים</a></li>
                <li><a href="#">וטרינרים</a></li>
                <li><a href="#">פנסיונים</a></li>
                <li><a href="#">חניות מחמד</a></li>
            </ul>
        </div>

        <div class="information">
            <ul>
                <li>
                    <h6> מידע </h6>
                </li>
                <li><a href="#">אודות</a></li>
                <li><a href="#">צור קשר</a></li>
                <li><a href="#">מדריכים</a></li>
                <li><a href="#">שאלות ותשובות</a></li>
            </ul>
        </div>
        <!-- </nav> -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>